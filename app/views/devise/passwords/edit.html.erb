<div class = "container container-fluid center-block ">
  <div class="row">
    <div class = "col-md-4 col-md-offset-4"><h1><span class="glyphicon glyphicon-flag " aria-hidden="true"></span></h1></div>
    <% if devise_error_messages!.present? %>
      <div class = "col-md-4 col-md-offset-4 text-danger"><%= devise_error_messages! %></div>
    <% end %>
      <div class = "col-md-4 col-md-offset-4" style = "background:#E6E6E6;">
        <h2>パスワードの変更</h2>
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.hidden_field :reset_password_token %>
          <div class="field">
            <%= f.label :password, "新しいパスワード" %><br />
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> 文字以上)</em><br />
            <% end %>
            <%= f.password_field :password, autofocus: true, autocomplete: "off" %>
          </div>
          <div class="field">
            <%= f.label :password_confirmation, "確認用パスワード" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off" %>
          </div>
          <div class="actions">
            <%= f.submit "変更", class: "btn btn-primary" %>
          </div>
        <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
