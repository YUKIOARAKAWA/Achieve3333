<div class = "container container-fluid center-block ">
  <div class="row">
    <div class = "col-md-4 col-md-offset-4"><h1><span class="glyphicon glyphicon-flag " aria-hidden="true"></span></h1></div>
      <% if devise_error_messages!.present? %>
        <div class = "col-md-4 col-md-offset-4 text-danger"><%= devise_error_messages! %></div>
      <% end %>
        <div class = "col-md-4 col-md-offset-4" style = "background:#E6E6E6;">
          <h2>パスワードの再設定</h2>
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <div class="field">
              <%= f.label "メールアドレス" %><br />
              <%= f.email_field :email, autofocus: true %>
            </div>
          <div class="actions">
            <%= f.submit "確認メール送信" ,class: "btn btn-primary" %>
          </div>
        <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
