<div class = "container container-fluid center-block ">
  <div class="row">
    <div class = "col-md-4 col-md-offset-4"><h1><span class="glyphicon glyphicon-flag " aria-hidden="true"></span></h1></div>
      <div class = "col-md-4 col-md-offset-4" style = "background:#E6E6E6;">
        <h2>ログイン</h2>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.label "メールアドレス" %><br />
            <%= f.email_field :email, autofocus: true %>
          </div>

          <div class="field">
            <%= f.label "パスワード" %><br />
            <%= f.password_field :password, autocomplete: "off" %>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label "保持する" %>
            </div>
          <% end -%>

        <div class="actions">
          <%= f.submit "ログイン", class: "btn btn-primary " %>
        </div>
      <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>