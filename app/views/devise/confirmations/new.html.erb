<div class = "container container-fluid center-block ">
  <div class="row">
    <div class = "col-md-4 col-md-offset-4"><h1><span class="glyphicon glyphicon-flag " aria-hidden="true"></span></h1></div>
      <% if devise_error_messages!.present? %>
        <div class = "col-md-4 col-md-offset-4 text-danger"><%= devise_error_messages! %></div>
      <% end %>
    <div class = "col-md-4 col-md-offset-4" style = "background:#E6E6E6;">
      <h2>確認メール再送信</h2>
        <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
          <div class="field">
            <%= f.label "メールアドレス" %><br />
            <%= f.email_field :email, autofocus: true, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>
          </div>
          <div class="actions">
            <%= f.submit "再送信", class: "btn btn-primary" %>
          </div>
        <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>